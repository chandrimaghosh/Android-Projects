<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.neu.madcourse.chandrimaghosh.edu.neu.madcourse.chandrimaghosh.About.AboutMe">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_x="16dp"
        android:layout_y="3dp"
        android:alpha="0.5"
        android:scaleType="fitXY" />

    <TextView
        android:text="Chandrima Ghosh"
        android:layout_width="146dp"
        android:layout_height="30dp"
        android:layout_x="122dp"
        android:layout_y="210dp"
        android:id="@+id/textView"
        android:layout_marginTop="14dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="2nd Year MS, CS"
        android:layout_height="wrap_content"
        android:layout_x="124dp"
        android:layout_y="252dp"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_width="140dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="imei"
        android:layout_height="wrap_content"
        android:layout_x="159dp"
        android:layout_y="40dp"
        android:id="@+id/imei_text_view"
        android:layout_width="125dp"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ghosh.c@husky.neu.edu"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_x="97dp"
        android:layout_y="278dp"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="84dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_x="152dp"
        android:layout_y="78dp"
        android:background="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:src="@drawable/head_shot_chand" />

</RelativeLayout>
